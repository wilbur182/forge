{
  "forge": {
    "version": "0.1.0",
    "description": "Unified TUI combining Sidecar and OpenCode agent"
  },
  "binary": "forge",
  "configDir": "~/.config/forge",
  "plugins": {
    "conversations": {
      "enabled": true
    },
    "gitstatus": {
      "enabled": true,
      "refreshInterval": "1s"
    },
    "filebrowser": {
      "enabled": true
    },
    "workspace": {
      "enabled": true
    },
    "notes": {
      "enabled": true
    }
  },
  "ui": {
    "layout": "tabs",
    "theme": "default",
    "showClock": true
  }
}
