{
  "forge": {
    "version": "0.1.0",
    "description": "Unified TUI combining Sidecar and OpenCode agent"
  },
  "agent": {
    "enabled": true,
    "defaultProvider": "claude",
    "providers": {
      "claude": {
        "model": "claude-opus-4.5"
      },
      "openai": {
        "model": "gpt-4"
      },
      "gemini": {
        "model": "gemini-2-pro"
      }
    }
  },
  "plugins": {
    "git-status": {
      "enabled": true,
      "refreshInterval": "1s"
    },
    "file-browser": {
      "enabled": true
    },
    "td-monitor": {
      "enabled": true,
      "refreshInterval": "2s",
      "dbPath": ".todos/issues.db"
    },
    "workspaces": {
      "enabled": true
    },
    "agent": {
      "enabled": true,
      "wasmRuntimePath": "./dist/agent.wasm"
    }
  },
  "ui": {
    "layout": "tabs",
    "theme": "default",
    "showClock": true
  },
  "wasm": {
    "runtimePath": "./packages/agent-wasm/dist/agent.wasm",
    "memoryPages": 256,
    "stackSize": 65536
  }
}
